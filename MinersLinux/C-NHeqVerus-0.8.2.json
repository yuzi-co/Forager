{
  "Path": "nheqminer/nheqminer",
  "Uri": "https://github.com/VerusCoin/nheqminer/releases/download/v0.8.2/nheqminer-Linux-v0.8.2.tgz",
  "Type": "CPU",
  "Arguments": [
    "-l #Server#:#Port#",
    "-u #Login#",
    "-p #Password#",
    "-a #APIPort#",
    "-t $(if ($CpuThreads -ne $null) {$CpuThreads} else {$SystemInfo.CpuFeatures.threads})",
    "#AlgorithmParameters#",
    "#CustomParameters#"
  ],
  "API": "NHEQ",
  "Algorithms": {
    "Verushash": "-v"
  }
}
